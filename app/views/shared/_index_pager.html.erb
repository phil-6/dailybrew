<div id="<%= controller_name %>_pager" class="pager <%= controller_name %>-pager row">
  <% if pagy.next %>
    <%= link_to(
          'Load More',
          "#{controller_name}?query=#{params[:query]}&page=#{pagy.next}",
          data: {
            turbo_frame: 'page_handler',
            controller: 'autoclick'
          },
          class: 'btn btn-primary'
        ) %>
  <% end %>
</div>
