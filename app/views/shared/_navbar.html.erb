<nav data-controller="navbar" class="navbar row">
  <div class="nav-left row">
    <%= link_to 'Daily Brew', root_path, class: 'nav-brand logo' %>
    <div class="nav-links row">
      <%= link_to 'Journal', dashboard_path, class: 'link link-primary' %>
      <%= link_to 'Roasters', roasters_path, class: 'link link-primary' %>
      <%= link_to 'Coffees', coffees_path, class: 'link link-primary' %>
      <%= link_to 'Subscription', subscription_path, class: 'link link-primary' %>
    </div>
  </div>

  <div class="nav-right row">
    <% if current_user %>
      <div class="nav-dropdown">
        <span class="dropdown-button nav-link link-secondary">
          <i class="las la-user-circle"></i><i class="las la-angle-down"></i>
        </span>
        <div class="dropdown-content">
          <%= render 'shared/navbar_dropdown_links', mobile_only: false %>
        </div>
      </div>
      <div data-action="click->navbar#expand" class="nav-mobile-expand nav-link link-secondary">
        <i class="las la-bars"></i>
      </div>
    <% else %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary-border' %>
      <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</nav>
