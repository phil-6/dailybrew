<div id="subscription_interest_toggle">
  <% if current_user&.subscription_interest %>
    <%= button_to update_subscription_interest_path, method: :patch, params: {user: { subscription_interest: false }} do %>
      I'm not interested anymore
    <% end %>
  <% else %>
    <%= button_to update_subscription_interest_path, method: :patch, params: {user: { subscription_interest: true }} do %>
      I'm In!
    <% end %>
  <% end %>
</div>
