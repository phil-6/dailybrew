<p style="color: green"><%= notice %></p>

<main class="<%= controller_name %>-<%= action_name %>">
  <div class="banner banner-primary-1">
    <div class="banner-content">
      <div class="page-title">
        <h2>Roasters</h2>
      </div>
      <p>This is our big list of <strong><%= @roasters_count %> roasters</strong> in the UK.</p>
      <p>There are many more, and we are constantly updating our list but if you think someone is missing, please let us
        know, and we'll get them added.</p>
    </div>
  </div>
  <div class="banner banner-primary-3">
    <div class="banner-content">
      <%= render 'shared/search', path: roasters_path, placeholder: 'Search' %>
    </div>
  </div>
  <% if current_user&.admin %>
    <div class="admin-controls-container">
      <div class="admin-controls">
        <h1>Admin Controls</h1>
        <%= link_to "New roaster", new_roaster_path %>
      </div>
    </div>
  <% end %>
  <%= turbo_frame_tag 'page_handler' %>
  <div id="roasters" class="card-collection row">
    <%= render @roasters %>
  </div>
  <%= render 'shared/index_pager', pagy: @pagy %>
</main>
