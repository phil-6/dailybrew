<div class="devise container centered">
  <div class="column card">
    <div class="form">
      <h1 class="logo">Daily Brew</h1>
      <div class="form-title">
        <h2>Login</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
        <div class="field">
          <%= form.email_field :email, class: 'form-input', autofocus: true, autocomplete: 'email', placeholder: 'Email', required: true %>
          <%= form.label :email, class: 'form-label' %>
        </div>
        <div class="field">
          <%= form.password_field :password, class: 'form-input', autocomplete: 'current-password', placeholder: 'Password', required: true %>
          <%= form.label :password, class: 'form-label' %>
        </div>
        <div class="form-links row">
          <div class="form-check row">
            <%= form.check_box :remember_me %>
            <%= form.label :remember_me, class: 'link link-primary' %>
          </div>
          <%= link_to 'Forgot password', new_user_password_path, class: 'link link-primary' %>
        </div>
        <div class="action">
          <%= form.submit 'Login', class: 'form-submit btn btn-primary' %>
        </div>
        <div class="form-links">
          Not a member? <%= link_to 'Sign up', new_user_registration_path, class: 'link link-complementary' %> now
        </div>

        <%# Find a better way of checking if the user is trying to sign in using an unconfirmed email %>
        <% if alert == 'You have to confirm your email address before continuing.' %>
          <hr />
          <div class="form-links">
            <%= link_to 'Resend confirmation instructions', new_user_confirmation_path, class: 'link link-primary' %>
          </div>
        <% end %>
        <%# Find a better way of checking if the user is trying to sign in using a locked account %>
        <% if alert == 'Your account is locked.' %>
          <hr />
          <div class="form-links">
            <%= link_to 'Resend unlock instructions', new_user_unlock_path, class: 'link link-primary' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
