<div class="devise registration container centered">
  <div class="row">
    <div class="column card">
      <div class="form">
        <h2 class="form-title">Create an account</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
          <div class="field">
            <%= form.email_field :email, class: 'form-input', autofocus: true, autocomplete: 'email', placeholder: 'Email', required: true %>
            <%= form.label :email, class: 'form-label' %>
          </div>
          <div class="field">
            <%= form.text_field :username, class: 'form-input', autocomplete: 'username', placeholder: 'Username', required: true %>
            <%= form.label :username, class: 'form-label' %>
          </div>
          <div class="field">
            <%= form.password_field :password, class: 'form-input', autocomplete: 'new-password', placeholder: 'Password', required: true %>
            <%= form.label :password, class: 'form-label' %>
          </div>
          <div class="field">
            <%= form.password_field :password_confirmation, class: 'form-input', autocomplete: 'new-password', placeholder: 'Confirm Password', required: true %>
            <%= form.label :password_confirmation, 'Password again', class: 'form-label' %>
          </div>
          <div class="action">
            <%= form.submit 'Submit', class: 'form-submit btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="column card brand">
      <h1 class="logo">Ride the Wave.</h1>
      <span class="tag-line">Your coffee journey starts here.</span>
    </div>
  </div>
</div>


