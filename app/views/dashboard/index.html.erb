<div class="dashboard">
  <div class="welcome">
    <h1>Welcome Back <%= current_user.first_name %></h1>
    <h3>Find A coffee</h3>
    <h3>Do Something</h3>
    <h3>Do Something Else</h3>
  </div>

  <div class="shelf-container">
    <%= render 'shelf' %>
  </div>

  <div class="brews-container">
    <h2><%= link_to "Your Brews", brews_path %></h2>
    <table class="brews-table">
      <%# Paginate this sh!t with infinite scroll baby %>

      <% @brews.each do |brew| %>
        <tr>
          <td class="coffee-name"><%= brew.coffee.name %></td>
          <td><%= brew.equipment %></td>
          <td><%= brew.rating || '?' %>/10</td>
          <td><%= time_ago_in_words(brew.created_at) %> ago</td>
          <td><%= link_to 'View Brew >>', brew_path(brew) %></td>
        </tr>
      <% end %>

    </table>
    <%= link_to "Make a Brew ", new_brew_path %> |
    <%= link_to "View More", brews_path %>
  </div>

  <div class="favourites-container">
    <%= render 'favourites' %>
  </div>
</div>
