<h1> Dashboard </h1>

<div class="welcome">
  <h1>Welcome Back <%= current_user.first_name %></h1>
  <h3>Find A coffee</h3>
  <h3>Do Something</h3>
  <h3>Do Something Else</h3>
</div>

<div class="inventory">
  <h1><%= link_to "Your Inventory", inventories_path %></h1>
  <% @inventories.each do |item| %>
  <div class="inventory-item">
    <h3><%= item.coffee.name %></h3>
    <h3>By <%= item.coffee.roaster.name %></h3>
    <hr>
    <p><%= current_user.brews.where(coffee: item.coffee).count %> brews logged</p>
    <p><% link_to new_brew_path do %><i class="las la-coffee"></i> Make a Brew<% end %></p>
    <p><i class="las la-history"></i>View Brews</p>
  </div>
  <% end %>
</div>

<div class="brews">
  <h1><%= link_to "Your Brews", brews_path %></h1>
  <% @brews.each do |brew| %>
    <p><%= time_ago_in_words(brew.created_at) %> ago</p>
    <p><%= brew.coffee.name %></p>
    <p><%= brew.rating %>/10</p>
    <hr>
  <% end %>
  <%= link_to "Make a Brew ", new_brew_path %>
  <%= link_to "View More", brews_path %>
</div>

<div class="favourites">
  <h1><%= link_to "Your Favourites", favourites_path %></h1>
  <% @favourites.each do |item| %>
    <div class="favourite-item">
      <h3><%= item.coffee.name %></h3>
      <h3>By <%= item.coffee.roaster.name %></h3>
      <hr>
      <p><%= current_user.brews.where(coffee: item.coffee).count %> brews logged</p>
      <p><%= current_user.brews.where(coffee: item.coffee).average_rating.round %>/10 Average</p>
    </div>
  <% end %>
</div>