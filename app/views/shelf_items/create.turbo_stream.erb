<%= turbo_stream.replace(
      "shelf_item_toggle_#{dom_id(@coffee)}",
      partial: "shelf_item_toggle",
      locals: { coffee: @coffee }) %>

<%= turbo_stream.replace(
      "brew_btn_#{dom_id(@coffee)}",
      partial: "coffees/brew_button",
      locals: { coffee: @coffee }) %>

<%= turbo_stream.update(
      "shelf_items_count",
      html: %(#{current_user.shelf_items.count})) %>

<%= turbo_stream.prepend(
      "dashboard_shelf",
      partial: "shelf_items/shelf_item",
      locals: { coffee: @coffee }) %>
