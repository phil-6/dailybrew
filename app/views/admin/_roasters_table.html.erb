<% @roasters.each do |roaster| %>
  <tr>
    <td><%= link_to roaster.name, roaster_path(roaster) %></td>
    <td><%= roaster.coffees_count %></td>
    <td><%= roaster.available_coffees_count %></td>
    <td><%= roaster.last_coffee_fetch ? "#{time_ago_in_words(roaster.last_coffee_fetch)} ago" : "never" %></td>
  </tr>
<% end %>
