<%= turbo_frame_tag "page_handler" do %>
  <%= turbo_stream_action_tag(
        "append",
        target: "users_table",
        template: %(#{render 'users_table', users: @users})
      ) %>
  <%= turbo_stream_action_tag(
        "replace",
        target: "users_table_pager",
        template: %(#{render "users_table_pager", pagy: @pagy})
      ) %>
<% end %>