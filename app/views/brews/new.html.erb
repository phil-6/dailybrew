<main data-controller="stopwatch" class="<%= controller_name %>-<%= action_name %>">

  <header>
    <div class="title">
      <h1>Log a Brew</h1>
      <h2><%= @coffee.name %></h2>
    </div>

    <div class="stopwatch">
      <div data-stopwatch-target="display" class="time" id="display">00:00:00</div>
      <div class="controls">
        <div class="start-pause-button">
          <button data-stopwatch-target="start" data-action="stopwatch#start" id="start_button">
            Start
          </button>
          <button data-stopwatch-target="pause" data-action="stopwatch#pause" id="pause_button" hidden>
            Pause
          </button>
        </div>
        <button data-stopwatch-target="reset" data-action="stopwatch#reset" class="reset_button">
          Reset
        </button>
      </div>
    </div>
  </header>

  <%= render "form", brew: @brew %>

</main>