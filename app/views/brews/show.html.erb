<main class="<%= controller_name %>-<%= action_name %>">
  <div class="banner banner-primary-1">
    <div class="banner-content">
      <%= render @brew %>
    </div>
  </div>

  <div>
    <%= link_to "Edit this brew", edit_brew_path(@brew) %> |
    <%= link_to "Back to brews", brews_path %>

    <%= button_to "Destroy this brew", @brew, method: :delete %>
  </div>
</main>