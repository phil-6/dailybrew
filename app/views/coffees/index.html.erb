<main class="coffees index">
  <div class="banner banner-primary-1">
    <div class="banner-content">
      <div class="page-title">
        <h2>Coffees</h1>
      </div>
      <p>There are <strong><%= Coffee.all.size %> coffees</strong> from <strong><%= Roaster.with_coffees.size %> roasters</strong>.</p>
    </div>
  </div>



  <h1 class="page-title">All Coffees</h1>
  <p class="stats">There are <%= Coffee.all.size %> coffees from <%= Roaster.with_coffees.size %> roasters</p>

  <%= render 'coffee_search' %>

  <%= turbo_frame_tag "page_handler" %>
  <div id="coffees">
    <%= render @coffees %>
  </div>
  <%= render "shared/index_pager", pagy: @pagy %>
</main>