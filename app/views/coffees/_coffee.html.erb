<div id="<%= dom_id coffee %>">

<!--  We can do something really cool and conditional with these.-->
  <%#= controller_name %>
  <%#= action_name %>

  <div class="name">
    <h1><%= coffee.name %></h1>
  </div>

  <div class="tasting-notes">
    <strong>Tasting notes:</strong>
    <%= coffee.tasting_notes %>
  </div>

  <div class="region-details">
    <div class="country">
      <strong>Country:</strong>
      <%= coffee.country %>
    </div>
    <div class="region">
      <strong>Region:</strong>
      <%= coffee.region %>
    </div>
    <div class="town">
      <strong>Town:</strong>
      <%= coffee.town %>
    </div>
    <div class="altitude">
      <strong>Altitude:</strong>
      <%= coffee.altitude %> masl
    </div>
  </div>

  <div class="production-details">
    <div class="process">
      <strong>Process:</strong>
      <%= coffee.process %>
    </div>
    <div class="variety">
      <strong>Variety:</strong>
      <%= coffee.variety %>
    </div>
    <div class="producer">
      <strong>Producer:</strong>
      <%= coffee.producer %>
    </div>
  </div>

  <div class="stats">
    <div class="brews">
      <%= coffee.brews_count %> brews logged
    </div>
    <div class="inventories">
      <%= coffee.inventories_count %> people currently have this coffee
    </div>
    <div class="favourites">
      <%= coffee.favourites_count %> people have this saved as one of their favourites
    </div>
    <div class="reviews">
      There are <%= coffee.reviews_count %> reviews of this coffee.
    </div>
  </div>


  <!--  <p>-->
  <!--    <strong>Description:</strong>-->
  <%#= coffee.description %>
  <!--  </p>-->

  <p>
    <strong>Url:</strong>
    <%= coffee.url %>
  </p>

</div>
